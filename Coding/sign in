#include<stdio.h>
#include<string.h>

#pragma warning(disable:4996)
char student[50][50];
char book_name[50][50];
void a()
{
	char y[50];
	printf("당신의 이름을 입력해주세요.: ");
	scanf("%s", y);
	int j = 0, g = 0, choice;
	for (int i = 0; i < 50;i++)
	{
		if (strcmp(y, student[i]) == 0)
		{
			printf("%s님이 현재 대출하고 계신 책은 %s입니다.", student[i], book_name[i]);
			j = 1;
			//if (lim[i].state == 1)
			//{
				//printf("%s님이 현재 대출하고 계신 책은 %s입니다.", student[i], book_name[i]);
				//j = 1;
			//}
			//else
			//{
				//printf("%s님이 현재 대출하고 계신 책은 없습니다.", student[i]);
				//j = 1;
			//}
		}
	}
	if (j == 0)
	{
		printf("일치하는 이름이 없어 회원가입을 진행합니다. 동의하십니까?(동의시 1 입력) : ");
		scanf("%d", &choice);
		if (choice == 1)
		{
			strcpy(student[g], y);
			g++;
		}
		else
		{
			printf("가입이 취소되었습니다.");
		}
	}
}
int main()
{
	int x;
	while (1)
	{
		scanf("%d", &x);
		switch (x)
		{
		case 1:
			a();
			break;
		}
	}
}
